<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2>Foi encontrado <%=book.errors.count %> erro:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<form>
  <div class='form-group'>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= form.label :release_date, style: "display: block" %>
    <%= form.date_field :release_date, class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= form.label :writer, "Escritor", style: "display: block" %>
    <%= form.text_field :writer, class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= form.label :publishing_company, style: "display: block" %>
    <%= form.text_field :publishing_company, class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
</form>
<% end %>
