<p style="color: green"><%= notice %></p>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th class="col-md-3" scope="col">Nome do livro</th>
      <th class="col-md-3" scope="col">Lançamento</th>
      <th class="col-md-3" scope="col">Escritor</th>
      <th class="col-md-3" scope="col">Editora</th>
      <th class="col-md-3" scope="col">Preço</th>
      <th class="col-md-3" scope="col">Açoes</th>
    </tr>
  </thead>
    <tbody>
      <%= render @book %>
    </tbody>
</table>


<div>
  <%= link_to "Edit this book", edit_book_path(@book) %> |
  <%= link_to "Back to books", books_path %>

  <%= button_to "Destroy this book", @book, method: :delete %>
</div>
